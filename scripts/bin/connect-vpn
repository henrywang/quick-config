#!/bin/sh

set -exou
# bemenu for up and down VPN and entering PIN+TOKEN

source "${HOME}/.local/share/scripts/bemenu"

pkill nmcli || true
if nmcli connection show --active | grep -q tun; then
    END_POINT=$(nmcli connection show --active | grep vpn | grep -o '^.*)')
    [ "$(printf "No\\nYes" | _bemenu -p "Disconnect $END_POINT?")" ] && nmcli connection down "$END_POINT" && notify-send "Bye $END_POINT"
else
    END_POINT=$(nmcli connection show | grep vpn | grep -o '^.*)' | _bemenu -l 20 -p "Choose VPN end point to connect")
    AUTH_CODE=$(echo "" | _bemenu_hide -p "PIN + TOKEN")
    echo $AUTH_CODE | nmcli connection up "$END_POINT" --ask
    notify-send "Go $END_POINT"
fi
