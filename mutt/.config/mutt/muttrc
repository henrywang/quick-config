# Send -----------------------------------------------
set from="Xiaofeng Wang<xiaofwan@redhat.com>"
set use_from=yes
set smtp_url=smtp://smtp.corp.redhat.com
set ssl_force_tls = yes
set editor="vim"
set imap_keepalive = 300
set ssl_starttls = yes
