#
# Sway Input Settings
#

#
# Input Defaults
#
# Hide mouse cursor
seat * hide_cursor 6000
# Drag and resize floating windows with $mod key
floating_modifier Mod4 normal
# Trun off focus follows mouse
focus_follows_mouse no

#
# Input Configuration
#

# Trackpad
input "1739:0:Synaptics_TM3072-003" {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# Keyboard
input * {
    xkb_layout "us,cn"
    xkb_options "grp:alt_space_toggle,ctrl:nocaps
}
