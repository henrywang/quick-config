#
# Sway Keybinding settings
#

#
# Set Variables
#

# Application Launcher
bindsym $mod+x exec bemenu-run -i --fn "pango:Hack Nerd Font 13" -n --tf="#282828" --tb="#fabd2f" --ff="#ebdbb2" --fb="#3c3836" --hf="#fabd2f" --hb="#3c3836" --nf="#282828" --nb="#a89984" -m $(swaymsg -t get_outputs -r | jq -r '.[] | select(.active==true) | select(.focused==true) | .id') -p ">"
# Application spawner
set $spawn spawn

#
# Custom Keybindings
#

# mod+q: Kill focused window
bindsym $mod+q kill

# mod+Shift+r: Restart sway
bindsym $mod+Shift+r restart

# mod+Shift+c: Reload sway
bindsym $mod+Shift+c reload

# mod+Control+Escape: exit sway
bindsym $mod+Control+Escape exit

#
# Menu Keybindings
#

# mod+Space Menu Launcher
bindsym $mod+Space exec $menu

#
# Application Keybindings
#

# mod+f: Launch firefox
bindsym $mod+f exec firefox-wayland
# mod+c: Launch chromium
bindsym $mod+c exec chromium-browser
# mod+m: Launch mutt
bindsym $mod+m exec "alacritty -t mutt -e mutt"
# mod+w: Launch weechat
bindsym $mod+w exec "alacritty -t weechat -e weechat"
# mod+t: Launch weechat
bindsym $mod+t exec Telegram

#
# Terminal Application Keybinds
#

# mod+Return: Launch an alacritty terminal
bindsym $mod+Return exec alacritty

#
# VPN, Kerberos, and WIFI Keybinds
#

# mod+v: Connect VPN
bindsym $mod+v exec connect-vpn
# mod+s: SSO login
bindsym $mod+s exec my_kinit
# mod+i: Connect WIFI
bindsym $mod+i exec connect-wifi
